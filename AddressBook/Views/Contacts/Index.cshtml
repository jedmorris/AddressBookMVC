@model IEnumerable<AddressBook.Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="..." class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                <p class="card-text">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </p>
            </div>
        </div>
    </div>
</div>


@foreach (var item in Model) {

    
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            @* use imageService to include img added by user *@
            @* <img src="@_imageService.ConvertByteArrayToFile(item.ImageData, item.ImageType)" class="img-fluid rounded-start" alt="..."> *@
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    @Html.DisplayFor(modelItem => item.FirstName)
                    @Html.DisplayFor(modelItem => item.LastName)
                </h5>
                <div class="card-text">
                    Email: @Html.DisplayFor(modelItem => item.Email)
                </div>
                <div class="card-text">
                    Phone: @Html.DisplayFor(modelItem => item.PhoneNumber)
                </div>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <i class="bi-pencil-fill"></i>
                </a> 
                <a asp-action="Details" asp-route-id="@item.Id">
                    <i class="bi-person-fill"></i>
                </a> 
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <i class="bi-trash-fill"></i>
                </a>
            </div>
        </div>
    </div>
</div>
